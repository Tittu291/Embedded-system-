#include <stdio.h>// 

struct Book {
    char title[65]; 
    char author[40]; 
    float price;
};

int main() {
    struct Book b[3]; 

    for (int i = 0; i < 3; i++)
{
        printf("Enter details for Book %d:\n", i + 1);
        printf("Title : ");
        scanf("%s", b[i].title); 
        printf("Author : ");
        scanf("%s", b[i].author);
        printf("Price: ");
        scanf("%f", &b[i].price);
    }
}
